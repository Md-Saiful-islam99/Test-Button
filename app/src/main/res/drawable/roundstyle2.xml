<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <solid android:color="@color/gray" />
                    <corners  android:radius="30dp"/>
                    <stroke android:width="5dp" android:color="@color/black"  />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER android:left="4dp" android:top="4dp" -->
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <solid android:color="@color/black" />
                    <corners android:radius="30dp"/>

                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="0dp" android:right="0dp" >
                <shape>
                    <solid android:color="@color/btn1" />
                    <corners android:radius="30dip"/>
                    <stroke android:width="5dp" android:color="@color/black"  />

                </shape>
            </item>
        </layer-list>
    </item>
</selector>